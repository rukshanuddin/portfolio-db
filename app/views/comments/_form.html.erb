<h3>Post a Comment</h3>

<%= bootstrap_form_for [@project, @comment] do |f| %>
  <%= f.hidden_field :author_name, :value => current_user.name %>
  <%= f.text_area :body, 
                  rows: 6,
                  required: true, 
                  minlength: 20,
                  maxlength: 1000,
                  placeholder: 'Describe what your project does, what methods you used, the languages, technologies incorporated  etc.', 
                  class: 'form-control' %>
                  
  <%= f.submit "Submit", class: 'form-control' %>
<% end %>