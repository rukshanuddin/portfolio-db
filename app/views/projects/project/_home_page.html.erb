<div class="col-sm-3 single-project-card" id=<%= project_path(project.id) %>>
  <div class="card">
    <div class="card-block">
      <h4 class="project-text">
        <%= truncate(project.title, :length => 60) %>
      </h4>
      <div class="project-content">
        <div class="posted-by">Posted by <%= project.user.name %></div>
        <h3><%= project.title %></h3> 
        <p><%= project.description %></p>
        <%= link_to "I'm interested", project_path(project.id), class: 'interested' %>
      </div>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 --