<div class="single-project-list" id=<%= project_path(project.id) %>>
  <%= truncate(project.title, :length => 60) %>
  <div class="project-content">
    <div class="posted-by">Developed by <%= project.user.name %></div>
    <h3><%= project.title %></h3> 
    <p><%= project.description %></p>
    <%= link_to "I'm interested", project_path(project.id), class: 'interested' %> 
  </div>
</div>